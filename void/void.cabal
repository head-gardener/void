  hs-source-dirs:   lib
  default-language: Haskell2010

executable void-app
  main-is:          Main.hs
  build-depends:
    , base      ^>=4.15.1.0
    , void-crm
    , postgresql-simple
    , transformers

  hs-source-dirs:   app
  default-language: Haskell2010

