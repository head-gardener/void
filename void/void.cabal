library void-crm
  exposed-modules:
    Void.CRM.Database
    Void.CRM.Damage
    Void.CRM.GUI
    Void.CRM.Subscriber

  extra-libraries:  voidcrm
  build-depends:
    , base               ^>=4.15.1.0
    , bytestring
    , postgresql-simple
    , serialise
